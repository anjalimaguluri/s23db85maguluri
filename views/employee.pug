extends layout

block content
  h1= title
  - let employees = results  
  div(class="container-fluid mt-3")
  div(class="row")
      each employee,index in employees
          div(class="col-sm-3 bg-warning m-2 p-4" onclick=`buy(${index})`) #{employee.employee_Name}  - #{employee.employee_age} - #{employee.employee_salary})


  script.
    function buy(itemNo)
    {
      alert(`You purchased Item ${itemNo+1}`)
    }    